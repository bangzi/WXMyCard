.main-view-search {
  display: flex;
  flex-direction: column;
  background-color: #eee;
}

.view-search {
  display: flex;
  margin-top: 20rpx;
  padding: 5rpx;
  align-items: center;
  background-color: white;
  border: 1px solid cornflowerblue;
  border-radius: 15px;
  margin-left: 5px;
  margin-right: 5px;
}

.input {
  flex: 1;
  height: 40rpx;
}

.input-placeholder {
  color: #999;
}

.button {
  width: 40rpx;
  height: 40rpx;
  padding-right: 10rpx;
}

.request_null {
  display: flex;
  margin-left: 20rpx;
}

.home_cell {
  margin-right: 0px;
  height: 80px;
}

.head {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 80px;
  /*border-bottom: 1px solid #dadada;*/
}

.img {
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
  border-radius: 50%;
}

.text {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.title {
  margin-top: 20rpx;
  font-size: 20px;
  color: #000;
}

.subtitle {
  font-size: 18px;
  margin-top: 10px;
  color: #999;
}

.concern {
  display: flex;
  flex-direction: column;
  /*justify-content: space-between;*/
  font-size: 14px;
  /*align-items: center;*/
  margin-right: 10px;
  margin-top: 10px;
  margin-bottom: -40px;
  height: 30px;
  width: 60px;
}

.bottomLine {
  display: flex;
  flex-direction: column;
  height: 1px;
  width: 1000px;
  top: -30px;
  background-color: #dadada;
}

.view-request-fail {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.text-request-fail {
  font-size: 18px;
  color: rgb(85, 85, 85);
}
