    flex-direction: column;
    margin-left: 30rpx;
}

.title {
    margin-top:20rpx;
    font-size: 20px;
    color: #000;
}

.subtitle {
    font-size: 18px;
    margin-top:10px;
    color: #999;
}
.bottomLine {
    display: flex;
    flex-direction: column;
